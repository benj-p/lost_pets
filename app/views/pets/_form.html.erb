<div class="row">
  <div class="col-6 offset-3">
    <%= simple_form_for(@pet) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :species, collection: Pet::SPECIES %>
      <%= f.input :date_found %>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
